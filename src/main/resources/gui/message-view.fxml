<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="messageHbox" alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="whisp.client.gui.MessageViewController">
   <children>
      <VBox fx:id="messageVbox" minWidth="100.0" style="-fx-background-color: #5b8085; -fx-background-radius: 3;">
         <children>
            <HBox fx:id="textHbox" alignment="CENTER_LEFT">
               <children>
                  <Label fx:id="messageLabel" style="-fx-text-fill: #FFFFFF;" wrapText="true">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Arial Hebrew Scholar" size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
            </HBox>
            <HBox alignment="BOTTOM_RIGHT">
               <children>
                  <Label fx:id="timeLabel" alignment="BOTTOM_RIGHT" style="-fx-text-fill: #FFFFFF;" text="17:15" wrapText="true">
                     <font>
                        <Font name="Arial Hebrew Scholar" size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets right="100.0" />
   </padding>
</HBox>
